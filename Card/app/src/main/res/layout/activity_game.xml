<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/behaviorContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">

    <View
        android:id="@+id/tableView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginHorizontal="60dp"
        android:layout_marginVertical="20dp"
        android:background="@drawable/table_rounded_rect_shape"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GameStart"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="@+id/tableView"
        app:layout_constraintHorizontal_bias="0.509"
        app:layout_constraintStart_toStartOf="@+id/tableView"
        app:layout_constraintTop_toTopOf="@+id/tableView"
        app:srcCompat="@drawable/chips" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/betContainer"
        android:layout_width="296dp"
        android:layout_height="89dp"
        android:layout_marginTop="2dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/ActContainer"
        app:layout_constraintEnd_toEndOf="@+id/tableView"
        app:layout_constraintStart_toStartOf="@+id/tableView"
        app:layout_constraintTop_toBottomOf="@+id/imageView">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/bet_upcontainer"
            android:layout_width="250dp"
            android:layout_height="60dp"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="112dp"
                android:text="$"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvPot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:text="0"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.008"
                app:layout_constraintStart_toEndOf="@+id/textView"
                app:layout_constraintTop_toTopOf="@+id/textView" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="total pot"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
        android:id="@+id/playercard"
        android:layout_width="105dp"
        android:layout_height="141dp"
        android:layout_marginTop="32dp"
        android:visibility="invisible"
        app:layout_constraintEnd_toStartOf="@+id/player2placeHolder"
        app:layout_constraintStart_toEndOf="@+id/player1placeHolder"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        app:srcCompat="@drawable/card_bg" />

    <ImageView
        android:id="@+id/player1card"
        android:layout_width="105dp"
        android:layout_height="141dp"
        android:layout_marginTop="32dp"
        android:visibility="invisible"
        app:layout_constraintEnd_toStartOf="@+id/player2placeHolder"
        app:layout_constraintStart_toEndOf="@+id/player1placeHolder"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        app:srcCompat="@drawable/card_bg" />

    <ImageView
        android:id="@+id/player2card"
        android:layout_width="105dp"
        android:layout_height="141dp"
        android:layout_marginTop="32dp"
        android:visibility="invisible"
        app:layout_constraintEnd_toStartOf="@+id/player2placeHolder"
        app:layout_constraintStart_toEndOf="@+id/player1placeHolder"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        app:srcCompat="@drawable/card_bg" />

    <ImageView
        android:id="@+id/player2placeHolder"
        android:layout_width="105dp"
        android:layout_height="141dp"
        android:layout_marginEnd="80dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/playercard"
        app:layout_constraintEnd_toEndOf="@+id/tableView"
        app:srcCompat="@drawable/shirt_blue" />

    <ImageView
        android:id="@+id/player1placeHolder"
        android:layout_width="105dp"
        android:layout_height="141dp"
        android:layout_marginStart="80dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/playercard"
        app:layout_constraintStart_toStartOf="@+id/tableView"
        app:srcCompat="@drawable/shirt_blue" />

    <include
        android:id="@+id/player1container"
        layout="@layout/player_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/tableView"
        app:layout_constraintEnd_toStartOf="@id/tableView"
        app:layout_constraintStart_toStartOf="@id/tableView"
        app:layout_constraintTop_toTopOf="@id/tableView" />

    <include
        android:id="@+id/player2container"
        layout="@layout/player_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/tableView"
        app:layout_constraintEnd_toEndOf="@id/tableView"
        app:layout_constraintStart_toEndOf="@id/tableView"
        app:layout_constraintTop_toTopOf="@id/tableView" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/ActContainer"
        android:layout_width="222dp"
        android:layout_height="63dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/tableView"
        app:layout_constraintEnd_toEndOf="@+id/tableView"
        app:layout_constraintStart_toStartOf="@+id/tableView">

        <ImageView
            android:id="@+id/ivAdd"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/add_selector"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/ivPK"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/ivGiveUP"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_add" />

        <ImageView
            android:id="@+id/ivGiveUP"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/give_up_selector"
            app:layout_constraintBottom_toBottomOf="@+id/ivAdd"
            app:layout_constraintDimensionRatio="h,1:1"
            app:layout_constraintEnd_toStartOf="@+id/ivAdd"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/ivAdd"
            app:srcCompat="@drawable/ic_give_up" />

        <ImageView
            android:id="@+id/ivPK"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/pk_selector"
            app:layout_constraintBottom_toBottomOf="@+id/ivAdd"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/ivAdd"
            app:layout_constraintTop_toTopOf="@+id/ivAdd"
            app:srcCompat="@drawable/ic_pk" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
        android:id="@+id/ivWinner1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/player1placeHolder"
        app:layout_constraintEnd_toEndOf="@+id/player1placeHolder"
        app:layout_constraintStart_toStartOf="@+id/player1placeHolder"
        app:layout_constraintTop_toTopOf="@+id/player1placeHolder"
        app:srcCompat="@drawable/mark_winner" />

    <ImageView
        android:id="@+id/ivWinner2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/player2placeHolder"
        app:layout_constraintEnd_toEndOf="@+id/player2placeHolder"
        app:layout_constraintStart_toStartOf="@+id/player2placeHolder"
        app:layout_constraintTop_toTopOf="@+id/player2placeHolder"
        app:srcCompat="@drawable/mark_winner" />


</androidx.constraintlayout.widget.ConstraintLayout>